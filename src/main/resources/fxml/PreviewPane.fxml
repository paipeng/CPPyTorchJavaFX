<?xml version="1.0" encoding="UTF-8"?>

<?import com.paipeng.cppytorch.view.PreviewPane?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ScrollPane?>
<fx:root type="PreviewPane" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.paipeng.cppytorch.view.PreviewPane">
    <VBox>
        <ScrollPane prefHeight="660.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/17"
                    xmlns:fx="http://javafx.com/fxml">
            <ImageView fx:id="previewImageView" fitHeight="640.0" fitWidth="640.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </ScrollPane>
        <HBox>
            <Button fx:id="zoomInButton">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/icons/zoom_in.png" />
                        </image>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>

            <Button fx:id="zoomOutButton">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/icons/zoom_out.png" />
                        </image>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>

</fx:root>